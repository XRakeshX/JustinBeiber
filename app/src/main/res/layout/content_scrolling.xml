<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ScrollingActivity"
    android:background="@drawable/one"
    tools:showIn="@layout/activity_scrolling">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/pic"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="250dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/main"
                android:layout_width="320dp"
                android:layout_height="150dp"
                android:layout_below="@id/title"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="50dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="50dp"
                app:cardElevation="20dp">

                <TextView
                    android:id="@+id/name"
                    android:text="JB"
                    android:alpha="1"
                    android:textSize="90sp"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/song"
                    android:textSize="25sp"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_below="@id/pic"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="@string/justin"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                android:textColor="@color/white"
                android:fontFamily="serif"
                android:textSize="25sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="Songs:"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="70dp"
                app:cardCornerRadius="40dp"
                app:cardElevation="20dp"
                android:onClick="one"
                app:cardBackgroundColor="@android:color/transparent"
                android:background="@color/white"
                android:layout_gravity="center"
                android:layout_width="350dp"
                android:layout_height="75dp">

                <TextView
                    android:text="Yummy"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="30dp"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/one_play"
                    android:layout_marginTop="19dp"
                    android:layout_marginLeft="260dp"
                    android:alpha="1"
                    android:src="@drawable/ic_play_arrow_black_24dp"
                    android:layout_width="100dp"
                    android:layout_height="50dp"/>

                <ImageView
                    android:id="@+id/one_pause"
                    android:layout_marginTop="19dp"
                    android:layout_marginLeft="260dp"
                    android:alpha="0"
                    android:src="@drawable/ic_pause_black_24dp"
                    android:layout_width="100dp"
                    android:layout_height="50dp"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="50dp"
                app:cardCornerRadius="40dp"
                app:cardElevation="20dp"
                android:onClick="two"
                app:cardBackgroundColor="@android:color/transparent"
                android:background="@color/white"
                android:layout_gravity="center"
                android:layout_width="350dp"
                android:layout_height="75dp">

                <TextView
                    android:text="Never Say Never"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="30dp"
                    android:onClick="three"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/two_pause"
                    android:layout_marginTop="19dp"
                    android:layout_marginLeft="260dp"
                    android:alpha="0"
                    android:src="@drawable/ic_pause_black_24dp"
                    android:layout_width="100dp"
                    android:layout_height="50dp"/>

                <ImageView
                    android:id="@+id/two_play"
                    android:layout_marginTop="19dp"
                    android:alpha="1"
                    android:layout_marginLeft="260dp"
                    android:src="@drawable/ic_play_arrow_black_24dp"
                    android:layout_width="100dp"
                    android:layout_height="50dp"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="50dp"
                app:cardCornerRadius="40dp"
                app:cardElevation="20dp"
                android:onClick="three"
                app:cardBackgroundColor="@android:color/transparent"
                android:background="@color/white"
                android:layout_gravity="center"
                android:layout_width="350dp"
                android:layout_height="75dp">

                <TextView
                    android:text="Heart Breaker"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="30dp"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/three_play"
                    android:layout_marginTop="19dp"
                    android:layout_marginLeft="260dp"
                    android:alpha="1"
                    android:src="@drawable/ic_play_arrow_black_24dp"
                    android:layout_width="100dp"
                    android:layout_height="50dp"/>

                <ImageView
                    android:id="@+id/three_pause"
                    android:layout_marginTop="19dp"
                    android:layout_marginLeft="260dp"
                    android:alpha="0"
                    android:src="@drawable/ic_pause_black_24dp"
                    android:layout_width="100dp"
                    android:layout_height="50dp"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="50dp"
                app:cardCornerRadius="40dp"
                app:cardElevation="20dp"
                android:onClick="four"
                app:cardBackgroundColor="@android:color/transparent"
                android:background="@color/white"
                android:layout_gravity="center"
                android:layout_width="350dp"
                android:layout_height="75dp">

                <TextView
                    android:text="I Don't Care"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="30dp"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/four_play"
                    android:layout_marginTop="19dp"
                    android:layout_marginLeft="260dp"
                    android:alpha="1"
                    android:src="@drawable/ic_play_arrow_black_24dp"
                    android:layout_width="100dp"
                    android:layout_height="50dp"/>

                <ImageView
                    android:id="@+id/four_pause"
                    android:layout_marginTop="19dp"
                    android:layout_marginLeft="260dp"
                    android:alpha="0"
                    android:src="@drawable/ic_pause_black_24dp"
                    android:layout_width="100dp"
                    android:layout_height="50dp"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="50dp"
                app:cardCornerRadius="40dp"
                app:cardElevation="20dp"
                android:onClick="five"
                app:cardBackgroundColor="@android:color/transparent"
                android:background="@color/white"
                android:layout_gravity="center"
                android:layout_width="350dp"
                android:layout_height="75dp">

                <TextView
                    android:text="All I Want For Christmas Is You"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="30dp"
                    android:textColor="@color/white"
                    android:textSize="23sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/five_play"
                    android:layout_marginTop="19dp"
                    android:layout_marginLeft="260dp"
                    android:alpha="1"
                    android:src="@drawable/ic_play_arrow_black_24dp"
                    android:layout_width="100dp"
                    android:layout_height="50dp"/>

                <ImageView
                    android:id="@+id/five_pause"
                    android:layout_marginTop="19dp"
                    android:layout_marginLeft="260dp"
                    android:alpha="0"
                    android:src="@drawable/ic_pause_black_24dp"
                    android:layout_width="100dp"
                    android:layout_height="50dp"/>

            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:layout_marginTop="50dp"
                app:cardCornerRadius="40dp"
                app:cardElevation="20dp"
                android:onClick="six"
                app:cardBackgroundColor="@android:color/transparent"
                android:background="@color/white"
                android:layout_gravity="center"
                android:layout_width="350dp"
                android:layout_height="75dp">

                <TextView
                    android:text="Confident"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="30dp"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/six_play"
                    android:layout_marginTop="19dp"
                    android:layout_marginLeft="260dp"
                    android:alpha="1"
                    android:src="@drawable/ic_play_arrow_black_24dp"
                    android:layout_width="100dp"
                    android:layout_height="50dp"/>

                <ImageView
                    android:id="@+id/six_pause"
                    android:layout_marginTop="19dp"
                    android:layout_marginLeft="260dp"
                    android:alpha="0"
                    android:src="@drawable/ic_pause_black_24dp"
                    android:layout_width="100dp"
                    android:layout_height="50dp"/>

            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:layout_marginTop="50dp"
                app:cardCornerRadius="40dp"
                app:cardElevation="20dp"
                android:onClick="seven"
                app:cardBackgroundColor="@android:color/transparent"
                android:background="@color/white"
                android:layout_gravity="center"
                android:layout_width="350dp"
                android:layout_height="75dp">

                <TextView
                    android:text="Friends"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="30dp"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/seven_play"
                    android:layout_marginTop="19dp"
                    android:layout_marginLeft="260dp"
                    android:alpha="1"
                    android:src="@drawable/ic_play_arrow_black_24dp"
                    android:layout_width="100dp"
                    android:layout_height="50dp"/>

                <ImageView
                    android:id="@+id/seven_pause"
                    android:layout_marginTop="19dp"
                    android:layout_marginLeft="260dp"
                    android:alpha="0"
                    android:src="@drawable/ic_pause_black_24dp"
                    android:layout_width="100dp"
                    android:layout_height="50dp"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </RelativeLayout>



</androidx.core.widget.NestedScrollView>